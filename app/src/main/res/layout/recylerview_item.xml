<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000">

        <ImageView
            android:id="@+id/playButtonImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_circled_play" />

        <!-- Music Name TV -->
        <TextView
            android:id="@+id/podcastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/playButtonImage"
            android:layout_toRightOf="@id/playButtonImage"
            android:text="Podcast Name"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Dj Name TV -->
        <TextView
            android:id="@+id/podcastDj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/podcastName"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/playButtonImage"
            android:layout_toRightOf="@id/playButtonImage"
            android:text="Podcast Dj"
            android:textColor="#0ec24e"
            android:textSize="14sp"
            android:textStyle="italic" />

        <!-- Time TV -->
        <TextView
            android:id="@+id/podcastTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="55:53"
            android:textColor="#fff"
            android:textSize="14sp"
            android:textStyle="bold" />


    </RelativeLayout>
</android.support.v7.widget.CardView>